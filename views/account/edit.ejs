<% layout('../layout') -%>
<div class="page-header">
  <h1>Account Details</h1>
</div>
<div class="row">
  <div class="cols-sm-12">
    <form class="form-horizontal" role="form" action="/accounts/<%= account['id'] %>" method="post"><!-- Display Name -->
      <div class="form-group">
        <!-- Account status -->
        <label for="account-status" class="col-sm-2 control-label">Account status:</label>
        <div class="col-sm-12">
          <label class="radio-inline col-sm-1">
            <input type="radio" name="account-status" id="account-status-disabled" value="disabled"<% if (account['status'] === 'disabled') { %> checked<% } %>> Disabled
          </label>
          <label class="radio-inline col-sm-1">
            <input type="radio" name="account-status" id="account-status-pendingapproval" value="pending approval"<% if (account['status'] === 'pending approval') { %> checked<% } %>> Pending
          </label>
          <label class="radio-inline col-sm-1">
            <input type="radio" name="account-status" id="account-status-approved" value="approved"<% if (account['status'] === 'approved') { %> checked<% } %>> Approved
          </label>
          <label class="radio-inline col-sm-1">
            <input type="radio" name="account-status" id="account-status-active" value="active"<% if (account['status'] === 'active') { %> checked<% } %>> Active
          </label>
        </div>
      </div>
      <!-- Display Name -->
      <div class="form-group">
        <!-- Display name -->
        <label for="account-display" class="col-sm-2 control-label">Display Name:</label>
        <div class="col-sm-4">
          <input type="text" class="form-control" id="account-display" value="<%= account['name'] %>"></input>
        </div>
      </div>
      <!-- Email -->
      <div class="form-group">
        <label for="account-email" class="col-sm-2 control-label">Email:</label>
        <div class="col-sm-4">
          <input type="email" class="form-control" id="account-email" value="<%= account['email'] %>"></input>
        </div>
      </div>
      <!-- Buttons -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-primary">Save</button>
          <button type="submit" class="btn btn-danger">Delete</button>
          <a href="/accounts" class="btn btn-default" role="button">Cancel</a>
        </div>
      </div>
    </form>
  </div>
</div>