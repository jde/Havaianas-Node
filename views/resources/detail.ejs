<% layout('../layout') -%>
<div class="page-header">
  <h1>Resource</h1>
</div>
<div class="row">
  <div class="cols-sm-12">
    <form class="form-horizontal" role="form" action="/accounts/<%= resource['id'] %>" method="post"><!-- Display Name -->
      <!-- Label -->
      <div class="form-group">
        <!-- Display name -->
        <label for="resource-display" class="col-sm-2 control-label">Label:</label>
        <div class="col-sm-4">
          <input type="text" class="form-control" id="resource-display" value="<%= resource['label'] %><%= resource['id'] %>"></input>
        </div>
      </div>
      <!-- URL -->
      <div class="form-group">
        <label for="resource-email" class="col-sm-2 control-label">URL:</label>
        <div class="col-sm-4">
          <input type="email" class="form-control" id="resource-email" value="<%= resource['url'] %>"></input>
        </div>
      </div>
      <!-- Buttons -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-primary">Save</button>
          <button type="submit" class="btn btn-danger">Delete</button>
          <a href="/accounts" class="btn btn-default" role="button">Cancel</a>
        </div>
      </div>
    </form>
  </div>
</div>